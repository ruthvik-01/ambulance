# Google Maps API Key (get from https://console.cloud.google.com)
# Enable: Directions API, Geocoding API
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Server config
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true

# Search radius in km for nearby hospitals
SEARCH_RADIUS_KM=15

# Scoring weights (must sum to 1.0)
WEIGHT_FACILITY=0.30
WEIGHT_DISTANCE=0.20
WEIGHT_BEDS=0.20
WEIGHT_SPECIALIST=0.15
WEIGHT_PREDICTION=0.10
WEIGHT_HISTORY=0.05
